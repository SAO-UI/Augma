{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["ESNext", "DOM"],
    "types": [
      "@babylonjs/core",
      "webxr",
      "vite/client",
      "vite-plugin-pages/client",
      "vite-plugin-vue-layouts/client"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "paths": {
       "~/*": ["packages/client/src/*"],
      "@augma/components": ["packages/components/index.ts"],
      "@augma/components/*": ["packages/components/*"],
      "augma": ["packages/augma/src/index.ts"],
      "@augma/*": ["packages/*/src"],
    }
  },
  "include": ["meta/**/*", "packages/**/*", "packages/.vitepress/**/*", "packages/shims.d.ts"],
  "exclude": ["dist", "node_modules"]
}
