{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "sourceMap": true,
    "lib": ["ESNext", "DOM"],
    "types": ["vite/client"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@augma/*": ["packages/*"],
      "augma": ["packages/augma"]
    }
  },
  "include": ["packages", "global.d.ts", "packages/**/*.d.ts"],
  "exclude": ["node_modules", "**/**/*.md", "**/dist"]
}
