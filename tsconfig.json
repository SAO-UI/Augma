{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "sourceMap": true,
    "lib": ["ESNext", "DOM"],
    "types": ["vite/client"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@augma/*": ["packages/*/src"],
      "augma": ["packages/augma/src"],
      "@augma/components": ["packages/augma/components"]
    }
  },
  "include": ["packages", "packages/**/*.d.ts"],
  "exclude": ["node_modules", "**/**/*.md", "**/dist"]
}
