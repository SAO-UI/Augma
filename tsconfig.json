{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "lib": ["esnext", "DOM"],
    "types": ["vite/client"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@augma/*": ["packages/*/src"],
      "augma": ["packages/augma/src"]
    }
  },
  "include": ["packages", "packages/*.d.ts"],
  "exclude": ["node_modules", "**/**/*.md", "**/dist"]
}
