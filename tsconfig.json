{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client"],
    "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["packages"],
  "exclude": ["node_modules", "**/**/*.md", "**/dist"]
}
