{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "es2016",
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["ESNext", "DOM"],
    "types": [
      "vite/client",
      "vite-plugin-pages/client",
      "vite-plugin-vue-layouts/client"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "paths": {
      "@augma/*": ["packages/*/src"],
      "@augma/utils/*": ["packages/utils/src/*"],
      "@augma/components/*": ["packages/components/*"],
      "augma": ["packages/augma/src/index.ts"]
    }
  },
  "include": ["./*.ts", "./packages/**/*.ts", "./packages/**/*.vue"],
  "exclude": ["dist", "node_modules"]
}
