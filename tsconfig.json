{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "sourceMap": true,
    "lib": ["ESNext", "DOM"],
    "types": ["vite/client"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "paths": {
      "@augma/*": ["packages/*/src"],
      "@augma/utils/*": ["packages/utils/src/*"],
      "@augma/components/*": ["packages/components/*"],
      "augma": ["packages/augma/src/index.ts"]
    }
  },
  "include": [
    "./*.ts",
    "./docs/.vitepress/**/*.ts",
    "./docs/.vitepress/**/*.vue",
    "./packages/**/*.ts",
    "./packages/**/*.vue",
  ],
  "exclude": ["dist", "node_modules"]
}
